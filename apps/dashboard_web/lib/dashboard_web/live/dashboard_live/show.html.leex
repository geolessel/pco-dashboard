<h1>Show Dashboard</h1>

<% # TODO: probably won't need this unless we want to edit which components are active %>

<%= if @live_action in [:edit] do %>
  <%= live_modal @socket, DashboardWeb.DashboardLive.FormComponent,
    id: @dashboard.id,
    title: @page_title,
    action: @live_action,
    dashboard: @dashboard,
    return_to: Routes.dashboard_show_path(@socket, :show, @dashboard) %>
<% end %>

<%= live_component(@socket, DashboardWeb.Components.PersonUpdated, people: @people) %>
